            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container">
<div class="page-header">
    <h1>Upload media by Kollus Http-endpoint API</h1>
</div>

<div class="flashes">
{% if config_not_exist %}
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>Config file is not found..config.yml
    </div>
{% endif %}
</div>
<div class="well">
    <form action="" method="post" enctype="multipart/form-data">
        <fieldset {% if config_not_exist %}disabled{% endif %}>
{% if not config_not_exist %}
        <div class="form-group">
            <label>Service account key</label>
            <p class="form-control-static">{{ service_account_key }}</p>
        </div>

        <div class="form-group">
            <label>Kollus domain</label>
            <p class="form-control-static">{{ kollus_domain }}</p>
        </div>

        <div class="form-group">
            <label for="category">Category</label>
            <select class="form-control" id="category" name="category_key">
{% for category in categories %}
                <option value="{{ category.key }}">{{ category.name }}</option>
{% endfor %}
            </select>
        </div>
{% endif %}
        <div class="form-group">
            <label for="upload-file">Upload file</label>
            <input type="file" class="form-control" id="upload-file" name="upload-file" placeholder="Upload File" multiple accept="audio/*,video/*">
        </div>

        <div class="checkbox">
            <label>
                <input type="checkbox" name="use_encryption" value="1"> Use encryption
            </label>
        </div>

        <div class="checkbox">
            <label>
                <input type="checkbox" name="is_audio_upload" value="1"> Is audio
            </label>
        </div>

        <div class="form-group">
            <label for="Title">Title (option)</label>
            <input type="text" class="form-control" id="Title" name="title" placeholder="Title">
        </div>

        <div class="checkbox">
            <label>
                <input type="checkbox" name="force_iframe_upload" value="1"> Force iframe upload (for old browser)
            </label>
        </div>

        <div class="checkbox">
            <label>
                <input type="checkbox" name="force_progress_api" value="1"> Force progress api (if progress api not supported)
            </label>
        </div>

        <button class="btn btn-primary" data-action="upload-file">
            <i class="fa fa-upload"></i> Upload
        </button>
        </fieldset>
    </form>
</div>

<div id="upload-file-list"></div>

<hr />

